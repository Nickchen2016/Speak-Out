
{
    "manifest_version":2,
    "name": "Speak-Out",
    "version": "1.0",
    "description": "Speak-Out is a small tool to help English learner or slow reader to have a better internet 🏄‍♀️🏄🏼 experience😉!",
    "content_scripts":[
       {    "matches":["<all_urls>"],
            "css": ["font.css"],
           "js": ["jquery-3.3.1.min.js","content.js"]
        }
    ],
    "permissions": ["storage"],
    "web_accessible_resources": ["font/futura_bold.otf"],
    "browser_action":{ 
        "default_icon": "./image/icon48.png",
        "default_popup": "index.html",
        "default_title": "Speak-Out"
    },
    "icons": {
        "16": "./image/icon16.png",
        "48": "./image/icon48.png",
        "128": "./image/icon128.png"
    }
}