
{
    "manifest_version":2,
    "name": "Speak-Out",
    "version": "1.0",
    "content_scripts":[
       {    "matches":["<all_urls>"],
           "js": ["content.js"]}
    ],
    "permissions": ["storage"],
    "browser_action":{ 
        "default_icon": "./image/icon.png",
        "default_popup": "index.html",
        "default_title": "Speak-Out"
    }

}